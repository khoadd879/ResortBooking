<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/hotelImageRecommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_hotel"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/hotel" />

            <ImageButton
                android:id="@+id/favorite_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="8dp"
                android:layout_alignTop="@+id/hotelImageRecommend"
                android:layout_alignEnd="@id/hotelImageRecommend"
                android:background="@drawable/heart_background"
                android:contentDescription="Add to favorites"
                android:scaleType="fitCenter"
                android:src="@drawable/baseline_favorite_border_24" />


        </RelativeLayout>
        <!-- Right Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_gravity="center_vertical">

            <!-- Hotel Name and Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hotelName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="The Aston VIII Hotel"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/outline_star_24"
                    app:tint="@color/rating_yellow" />

                <TextView
                    android:id="@+id/ratingStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="4.7"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Location -->
            <TextView
                android:id="@+id/hotelLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Â© Veum Point, Michikoton"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />



        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>