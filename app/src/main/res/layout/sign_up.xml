<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/header_gradient"
        android:orientation="vertical"
        />

    <TextView
        android:id="@+id/welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:fontFamily="sans-serif-light"
        android:text="Tham gia cuộc phiêu lưu!"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome"
        android:fontFamily="sans-serif-light"
        android:text="Tạo tài khoản để bắt đầu chuyến đi của bạn"
        android:layout_marginLeft="10dp"
        android:textColor="#6D6D6D"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Tên đăng nhập"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/text2"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/outline_person_24"
        android:drawableTint="@color/nav_item_color"
        android:hint="Nhập tên đăng nhập..."
        android:textColorHint="@color/nav_item_color"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:background="@drawable/edit_text_border"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Email"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/text4"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/outline_email_24"
        android:drawableTint="@color/nav_item_color"
        android:hint="Nhập email..."
        android:textColorHint="@color/nav_item_color"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:background="@drawable/edit_text_border"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Mật khẩu"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/text3"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/outline_lock_24"
        android:drawableRight="@drawable/baseline_visibility_24"
        android:drawableTint="@color/nav_item_color"
        android:hint="Nhập mật khẩu..."
        android:inputType="textPassword"
        android:textColorHint="@color/nav_item_color"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:background="@drawable/edit_text_border"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/text_rePass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-light"
        android:text="Xác nhận mật khẩu"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/re_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/text_rePass"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/outline_lock_24"
        android:drawableRight="@drawable/baseline_visibility_24"
        android:drawableTint="@color/nav_item_color"
        android:hint="Nhập lại mật khẩu..."
        android:textColorHint="@color/nav_item_color"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:background="@drawable/edit_text_border"
        android:inputType="textPassword"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        />



    <Button
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_SignUp"
        android:text="Đăng ký"
        android:textColor="@color/white"
        android:layout_below="@id/re_password"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/button_border_all"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/black"
        android:padding="15dp"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>