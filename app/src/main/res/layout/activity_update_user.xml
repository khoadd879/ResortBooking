<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
        android:id="@+id/tvTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THÔNG TIN NGƯỜI DÙNG"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="30dp"/>
    </LinearLayout>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    tools:context=".AdminLayout.UpdateUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/baseline_person_24"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_border"
            android:contentDescription="Avatar"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chạm để chọn ảnh đại diện"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginBottom="16dp" />

        <!-- Họ và tên -->
        <EditText
            android:id="@+id/edtFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Họ và tên"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Giới tính -->
        <RadioGroup
            android:id="@+id/radioGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Nam"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="Nữ"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>


        <!-- Số điện thoại -->
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số điện thoại"
            android:inputType="phone"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Căn cước công dân -->
        <EditText
            android:id="@+id/edtIdCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Căn cước công dân"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Ngày sinh -->
        <EditText
            android:id="@+id/edtDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chọn ngày sinh"
            android:focusable="false"
            android:inputType="none"
            android:background="@drawable/edit_text_border"
            android:padding="10dp"
            android:layout_marginBottom="16dp"/>

        <!-- Hộ chiếu -->
        <EditText
            android:id="@+id/edtPassport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hộ chiếu"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Tài khoản -->
        <EditText
            android:id="@+id/edtAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tài khoản"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="16dp" />

        <!-- Mật khẩu -->
        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/edit_text_border"
            android:layout_marginBottom="24dp" />

        <!-- Giới tính -->
        <RadioGroup
            android:id="@+id/radioRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="User"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/radioManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="Quản lý"
                tools:ignore="TouchTargetSizeCheck" />

            <RadioButton
                android:id="@+id/radioAdmin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="Admin"
                tools:ignore="TouchTargetSizeCheck" />
        </RadioGroup>

        <!-- Nút cập nhật -->
        <Button
            android:id="@+id/btnUpdateUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật người dùng"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/button_border_all" />

    </LinearLayout>
</ScrollView>
</LinearLayout>

