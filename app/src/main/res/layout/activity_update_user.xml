<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Tiêu đề chính -->
    <TextView
        android:id="@+id/tvTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THÔNG TIN NGƯỜI DÙNG"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="@color/black"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Avatar Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/baseline_person_24"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_border"
                    android:contentDescription="Avatar"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chạm để chọn ảnh đại diện"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Thông tin cá nhân -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin cá nhân"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Họ và tên -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập họ và tên"
                android:inputType="textPersonName"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="16dp" />

            <!-- Giới tính -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới tính"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <RadioGroup
                android:id="@+id/radioGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/radioMale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Nam"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radioFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nữ"/>
            </RadioGroup>

            <!-- Thông tin liên hệ -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin liên hệ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Số điện thoại -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số điện thoại"
                android:inputType="phone"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="16dp" />

            <!-- Email -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="16dp" />

            <!-- Thông tin định danh -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin định danh"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Căn cước công dân -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Căn cước công dân"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/edtIdCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số CCCD"
                android:inputType="number"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="16dp" />

            <!-- Ngày sinh -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngày sinh"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/edtDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chọn ngày sinh"
                android:focusable="false"
                android:inputType="none"
                android:background="@drawable/edit_text_border"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>

            <!-- Hộ chiếu -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hộ chiếu"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/edtPassport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số hộ chiếu"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="16dp" />

            <!-- Thông tin tài khoản -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông tin tài khoản"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <!-- Tài khoản -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/edtAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên tài khoản"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="16dp" />

            <!-- Mật khẩu -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mật khẩu"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/edit_text_border"
                android:layout_marginBottom="24dp" />

            <!-- Vai trò -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vai trò"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="4dp"/>

            <RadioGroup
                android:id="@+id/radioRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/radioUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="User"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radioManager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quản lý"
                    android:layout_marginEnd="16dp"/>

                <RadioButton
                    android:id="@+id/radioAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"/>
            </RadioGroup>

            <!-- Nút cập nhật -->
            <Button
                android:id="@+id/btnUpdateUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CẬP NHẬT NGƯỜI DÙNG"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@drawable/button_border_all"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>