<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:background="@android:color/transparent">

        <!-- ImageView -->
        <ImageView
            android:id="@+id/hotelImage"
            android:layout_width="250dp"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:background="@drawable/image_hotel"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/hotel" />

        <!-- Favorite Button -->
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:layout_alignTop="@id/hotelImage"
            android:layout_alignEnd="@id/hotelImage"
            android:background="@drawable/heart_background"
            android:contentDescription="Add to favorites"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_favorite_border_24" />

        <!-- Text Container with improved visibility -->
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/hotelImage"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:padding="8dp"
            android:background="@drawable/text_background_dark">

            <!-- Resort Name -->
            <TextView
                android:id="@+id/tvResortName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Resort Name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Location and Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Location"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />

                <TextView
                    android:id="@+id/ratingStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/outline_star_24"
                    android:text="4.5"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:shadowColor="#80000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>