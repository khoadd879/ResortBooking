<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề cố định -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:contentDescription="Erm không biết nay ở đy chi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/button_border"
            android:src="@drawable/baseline_arrow_back_24"/>
    <TextView
        android:id="@+id/tvTieuDe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật thông tin Resort"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginVertical="10dp"
        android:layout_marginEnd="30dp"/>
    </LinearLayout>

    <!-- Cuộn nội dung -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tên resort -->
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên resort" />
            <EditText
                android:id="@+id/edtTenResort"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:hint="Nhập tên resort"
                android:background="@drawable/edit_text_border"/>

            <!-- Địa điểm -->
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Địa điểm" />
            <EditText
                android:id="@+id/edtDiaDiem"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:hint="Nhập địa điểm"
                android:background="@drawable/edit_text_border"/>

            <!-- Mô tả -->
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Mô tả" />
            <EditText
                android:id="@+id/edtMoTa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mô tả"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:minLines="4"
                android:gravity="top"
                android:inputType="textMultiLine" />

            <!-- Ảnh -->
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Ảnh Resort" />
            <ImageView
                android:id="@+id/imgResort"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"
                android:contentDescription="Ảnh resort" />
            <Button
                android:id="@+id/btnChonAnh"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Chọn ảnh"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/button_border_all"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

    <!-- Nút cập nhật -->
    <Button
        android:id="@+id/btnCapNhat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật"
        android:backgroundTint="@color/dard_blue"
        android:background="@drawable/button_border_all"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center" />

</LinearLayout>
